<html>
  <head>
    <title>Berita PAUDQU SALSABILA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="icon" href="../public/assets/img/logo-paudqu.png">
    <link rel="stylesheet" href="../public/assets/css/style-blog.css" />
  </head>
  <body>
    <!-- NavBar -->
        <!-- awal nav -->
        <nav class="navbar navbar-expand-lg navbar-light bg-grey">
            <div class="container">
              <a class="navbar-brand" href="/"><img src="../public/assets/img/logo-paudqu.png" style="width: 50px;" alt="logo"></a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                  <li class="nav-item">
                    <a class="nav-link active text-home" aria-current="page" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link active text-orange" aria-current="page" href="/blog">Blog</a>
                  </li>
                </ul>
              {{#if isLogin}}
              <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                      <span class="nav-link active text-home" aria-current="page">Hallo, {{user.name}}</span>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="/logout">Logout</a>
                  </li>
              </ul>

            {{else}}
              <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active text-home" aria-current="page" href="/login">Login</a>
                </li>
              </ul>
  
            {{/if}}                
                  <a class="btn text-white btn-all text-black px-3 ms-5"  href="/contact">Contact Me</a>
              </div>
            </div>
          </nav>
          <!-- akhir nav -->
          <!-- akhir nav -->

    <!-- Blog -->
    <!-- Form -->
    {{#if messages.success}}
      <div class="alert alert-success" role="alert">
          {{messages.success}}
      </div>
    {{/if}} 
    
    <div class="blog">
      {{#if isLogin}}
      <div class="add-blog">
        <a href="/add-blog" style="padding: 10px 20px; text-decoration: none; color: white">Add News</a>
      </div>
      {{/if}}
      
      {{!-- <hr class="line" > --}}
      <div id="contents" class="blog-list">

        
        <!-- dynamic content would be here -->
        {{#each blogs}}
          <div class="blog-list-item">
            <div class="blog-image">
              <img src="../uploads/{{this.image}}" alt="" />
            </div>
            <div class="blog-content">
              {{#if isLogin}}
              <div class="btn-grup">
                <a href="/edit-news/{{this.id}}" class="btn-edit">Edit News</a>
                <a href="/delete-blog/{{this.id}}" class="btn-delete">Delete News</a>
              </div>
              {{/if}}
              <h1>
                <a href="/blog-detail/{{this.id}}" target="_blank"
                  >{{this.title}}</a
                >
              </h1>
              <div class="detail-blog-content">
                {{this.postAt}} | {{this.author}}
              </div>
              <p>
                {{this.content}}
              </p>
              <div style="text-align: right">
                <span style="font-size: 13px; color: grey">
                  {{this.distance}}
                </span>
              </div>
            
            </div>
          </div>
        {{/each}}

      </div>
    </div>
    <script src=""></script>
  </body>
</html>
